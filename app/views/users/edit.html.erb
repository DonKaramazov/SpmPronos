<% if @user.errors.any? %>
<div class="alert alert-danger">
    <ul>
        <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="card">
<div class="card-header">Modifier mon compte</div>
<div class="card-body">
    <%= form_for @user,url: profil_path, html: { class:'form-horizontal' } do |f| %>

        <% if @user.avatar %>
            <%= image_tag @user.avatar_url %>
        <% end %>

        <div class="form-group row">
            <%= f.label :avatar_file, "Avatar",class: 'col-md-4 control-label' %>
            <div class="col-md-6">
                <%= f.file_field :avatar_file,class:'form-control' %>
            </div>
        </div>

        <div class="form-group row">
            <%= f.label :username, "Nom d'utilisateur",class: 'col-md-4 control-label' %>
            <div class="col-md-6">
                <%= f.text_field :username,class:'form-control' %>
            </div>
        </div>
        <div class="form-group row">
            <%= f.label :email, "Email",class: 'col-md-4 control-label' %>
            <div class="col-md-6">
                <%= f.email_field :email,class:'form-control' %>
            </div>
        </div>

        <div class="form-group row">
                <%= f.label :firstname, "PrÃ©nom",class: 'col-md-4 control-label' %>
                <div class="col-md-6">
                    <%= f.text_field :firstname,class:'form-control' %>
                </div>
        </div>

        <div class="form-group row">
                <%= f.label :lastname, "Nom",class: 'col-md-4 control-label' %>
                <div class="col-md-6">
                    <%= f.text_field :lastname,class:'form-control' %>
                </div>
        </div>
       

        <div class="form_group row">
            <div class="col-md-6 col-md-offset-4">
                <button type="submit" class="btn btn-primary">Modifier le profil</button>
            </div>    
        </div>
    <% end %>
</div>
</div>