<h1>Les actualites</h1>

<a href="<%= new_post_path %>" class="btn btn-primary">Ajouter une actualité</a>

<table class="table table-striped">
    <thead>
      <tr>
        <th></th>
        <th>Nom</th>
        <th>date de publication</th>
        <th>statut</th>
      </tr>
    </thead>
    <tbody>
        <% @posts.each do |post| %>
            <tr>
                <td>
                    <!-- les actions -->
                    <%= link_to 'Modifier', edit_post_path(post.id) %>
                    <%= link_to 'Supprimer', post_path(post.id),
                        method: :delete,
                        data: { confirm: 'Etes vous sûre ?' }
                     %>
                </td>
                <td><%= post.title %></td>
                <td><%= post.published_at %></td>
                <td><%= post.status %></td>
            </tr>
        <% end %>
    </tbody>
  </table>