<h2>Les actualites</h2>

<a href="<%= new_post_path %>" class="btn btn-primary">Ajouter une actualité</a>

<table class="table table-striped">
    <thead>
      <tr>
        <th></th>
        <th>Nom</th>
        <th>date de publication</th>
        <th>statut</th>
      </tr>
    </thead>
    <tbody>
        <% @posts.each do |post| %>
            <tr>
                <td>
                    <!-- les actions -->
                    <%= link_to_image 'edit_32x32',edit_post_path(post.id), title: "modifier" %>
                    <%= link_to_image 'delete_32x32',post_path(post.id),
                        method: :delete,
                        data: { confirm: 'Etes vous sûre ?' },
                        title: 'supprimer'
                    %> 
                </td>
                <td><%= post.title %></td>
                <td><%= post.published_at %></td>
                <td><%= post.status %></td>
            </tr>
        <% end %>
    </tbody>
  </table>